<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/main_bg"
        tools:context=".user.freeCoins.FreeDiamondsActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lytTop"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/vip_banner_bg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lytTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingTop="@dimen/_10sdp">

                        <ImageView
                            android:id="@+id/backimg"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:onClick="onClickBack"
                            android:padding="5dp"
                            android:src="@drawable/ic_back"
                            app:tint="@color/black" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="15dp"
                                android:fontFamily="@font/abold"
                                android:text="@string/free_diamonds"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_16sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/abold"
                        android:text="@string/method_1"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp" />

                    <RelativeLayout
                        android:id="@+id/lytAds"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_190sdp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/free_diamond_1" />

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15sdp"
                    android:fontFamily="@font/abold"
                    android:text="@string/method_2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_390sdp"
                        android:background="@drawable/free_diamond_bg_2">

                        <LinearLayout
                            android:id="@+id/lytrefer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="40dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:alpha=".9"
                                android:fontFamily="@font/abold"
                                android:text="@string/your_refer_code"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:background="@drawable/bg_5dp"
                                android:backgroundTint="@color/white"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/tvCode"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:background="@drawable/bg_5dp"
                                    android:backgroundTint="@color/white"
                                    android:fontFamily="@font/abold"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="10dp"
                                    android:singleLine="true"
                                    android:text=""
                                    android:textColor="#EF136C"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:onClick="onClickShare"
                                    android:src="@drawable/ic_baseline_share_24"
                                    app:tint="@color/pink" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginHorizontal="10dp"
                                    android:onClick="onClickCopy"
                                    android:src="@drawable/ic_baseline_content_copy_24_s"
                                    app:tint="@color/pink" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:src="@drawable/free_diamond_2" />

                            <TextView
                                android:id="@+id/tvReferString"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:fontFamily="@font/amidum"
                                android:gravity="center"
                                android:lineSpacingExtra="5dp"
                                android:paddingHorizontal="20dp"
                                android:text="@string/invite_your_friends_for_each_payout_of_invited_friends_you_and_your_friend_both_will_receive_200_diamonds"
                                android:textColor="@color/white"
                                android:textSize="12sp" />

                            <TextView
                                android:id="@+id/tvReferStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginTop="15dp"
                                android:fontFamily="@font/amidum"
                                android:gravity="center"
                                android:paddingHorizontal="20dp"
                                android:text="@string/you_already_referred"
                                android:textColor="@color/pink"
                                android:textSize="12sp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:id="@+id/lytinput"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="vertical">

                                <EditText
                                    android:id="@+id/etRefercode"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/bg_5dp"
                                    android:backgroundTint="@color/white"
                                    android:fontFamily="@font/abold"
                                    android:hint="@string/enter_referral_code_here"
                                    android:inputType="textCapCharacters"
                                    android:paddingHorizontal="10dp"
                                    android:paddingVertical="10dp"
                                    android:singleLine="true"
                                    android:textAllCaps="true"
                                    android:textColor="@color/pink"
                                    android:textColorHint="#808080"
                                    android:textSize="14sp" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="40dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="20dp"
                                    android:background="@drawable/bg_20dp"
                                    android:backgroundTint="#FFB800"
                                    android:onClick="onClickSubmit"
                                    android:paddingHorizontal="40dp"
                                    android:text="@string/submit"
                                    android:textAllCaps="false"
                                    android:textColor="@color/white"
                                    android:visibility="visible" />

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/lytreferCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:fontFamily="@font/amidum"
                        android:textColor="@color/pink"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <ProgressBar
            android:id="@+id/pd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/pink"
            android:visibility="gone" />

        <include layout="@layout/layout_no_internet" />

    </RelativeLayout>

</layout>