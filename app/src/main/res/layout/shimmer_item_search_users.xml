<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="10dp"
        android:background="@color/black_back"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/imgLyt"
                android:layout_width="70dp"
                android:layout_height="75dp"
                android:layout_marginStart="5dp">

                <ImageView
                    android:id="@+id/imguser"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_round_pink"
                    android:backgroundTint="@color/shimmarColor"
                    android:padding="1dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toStartOf="@id/tvtime"
                android:layout_toEndOf="@id/imgLyt"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/lytname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/shimmarColor"
                        android:fontFamily="@font/abold"
                        android:text="Johnny Rios"
                        android:textColor="@color/shimmarColor"
                        android:textSize="16dp" />

                    <!--
                                        <TextView
                                            android:layout_marginTop="5dp"
                                            android:singleLine="true"
                                            android:id="@+id/tvcountry"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:background="@drawable/bg_5dp"
                                            android:backgroundTint="@color/graylight"
                                            android:fontFamily="@font/amidum"
                                            android:paddingHorizontal="5dp"
                                            android:paddingVertical="2dp"
                                            android:text="COUNTRY"
                                            android:textColor="@color/white"
                                            android:textSize="10sp" />
                    -->
                    <TextView

                        android:id="@+id/tvBio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lytname"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="5dp"
                        android:background="@color/shimmarColor"
                        android:fontFamily="@font/alight"
                        android:singleLine="true"
                        android:text="I Am Professional Dater"
                        android:textColor="@color/shimmarColor" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_round_pink"
                    android:backgroundTint="@color/shimmarColor"
                    android:fontFamily="@font/amidum"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="3dp"
                    android:text="Follow"
                    android:textColor="@color/shimmarColor"
                    android:textSize="16dp" />

                <ProgressBar
                    android:id="@+id/pd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_marginHorizontal="25dp"
                    android:indeterminateTint="@color/white"
                    android:visibility="gone" />

            </RelativeLayout>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height=".3dp"
            android:layout_marginTop="10dp"
            android:background="@color/graylight"
            android:visibility="gone" />
    </LinearLayout>
</layout>