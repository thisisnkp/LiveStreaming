<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_bottom_sheet_corner_a"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/lyttop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/amidum"
                android:text="@string/fill_your_details"
                android:textColor="@color/black"
                android:textSize="18sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lytimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/imgUser"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_round_pink"
                android:padding="2dp"
                android:src="@drawable/ic_userthumb_e" />

            <ImageView
                android:id="@+id/btnPencil"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="2dp"
                android:background="@drawable/bg_round_pink"
                android:backgroundTint="@color/purple"
                android:padding="8dp"
                android:src="@drawable/ic_baseline_edit_24_e"
                app:tint="@color/white" />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lytGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/male"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:background="@drawable/bg_stok_round"
                android:padding="15dp"
                android:src="@drawable/waiter_a" />

            <ImageView
                android:id="@+id/female"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="80dp"
                android:background="@drawable/bg_stok_round_pink"
                android:padding="15dp"
                android:src="@drawable/female_user" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amidum"
                android:text="@string/enter_name"
                android:textColor="@color/black"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/etName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_5dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/amidum"
                android:hint="@string/enter_name"
                android:paddingLeft="20sp"
                android:singleLine="true"
                android:textColor="@color/pink"
                android:textColorHint="@color/graylight"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lytUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="20sp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/amidum"
                android:text="@string/enter_username"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/bg_5dp"
                android:backgroundTint="@color/white"
                android:gravity="center_vertical">

                <EditText
                    android:id="@+id/etUserName"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"

                    android:background="@drawable/bg_5dp"
                    android:backgroundTint="@color/white"
                    android:fontFamily="@font/amidum"
                    android:hint="@string/enter_username"
                    android:paddingLeft="20sp"
                    android:singleLine="true"
                    android:textColor="@color/pink"
                    android:textColorHint="@color/graylight"
                    android:textSize="15sp" />

                <ProgressBar
                    android:id="@+id/pd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginEnd="5dp"
                    android:indeterminateTint="@color/pink" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_round_pink"
            android:fontFamily="@font/amidum"
            android:paddingHorizontal="30dp"
            android:paddingVertical="7dp"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>

</layout>